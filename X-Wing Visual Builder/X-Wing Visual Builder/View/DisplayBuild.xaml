<Page x:Class="X_Wing_Visual_Builder.View.DisplayBuild"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:X_Wing_Visual_Builder.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Build">
    
    <Canvas Background="Gray" Name="canvasArea" Loaded="PageLoaded">
        <Menu IsMainMenu="True" x:Name="menu" Height="18" Width="{Binding ElementName=canvasArea,Path=ActualWidth}">
            <MenuItem Header="File">
                <MenuItem Header="Load" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
        </Menu>
    </Canvas>
</Page>
